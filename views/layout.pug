doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
  body
    nav
      .nav-wrapper
        a.brand-logo.left(href='/') Conferencify
        ul#nav-mobile.right.hide-on-med-and-down
          unless user
            li
              a(href='/users/register') Inscription
            li
              a(href='/users/login') Connexion
          if user
            li
              a(href='/users/disconnect') Deconnexion
            if user.isAdmin
              li
                a(href='/conferences/new') Programmer une conférence
          li
            a(href='/conferences/') Conférences
    .container
      block content
